<div class="admin-title">
    <h2>Add New Graph</h2>
</div>


<script src="../public/scripts/script.js"></script>
<form action="/add-post" method="POST">
    <input type="text" name="title" placeholder="Title" required>
    <input type="number" name="numOfNodes" placeholder="Number of Nodes" required>
    
    <div id="edges-container">
        <div>
            <input type="number" name="edgesList[][0]" placeholder="Node 1" required>
            <input type="number" name="edgesList[][1]" placeholder="Node 2" required>
        </div>
    </div>
    
    <button type="button" onclick="addEdgeField()">Add Edge</button>
    <button type="submit">Add Post</button>
</form>